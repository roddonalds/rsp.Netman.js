{
    "name": "wifi-listing-electron",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "gitup": "git add . && git commit -m 'update' && git push",
        "start": "NODE_ENV=production electron . --remote-allow-origins=*",
        "start:dev": "NODE_ENV=development electron . --watch --remote-allow-origins=* ",
        "dist": "electron-builder --linux deb --x64",
        "install": "sudo apt remove rsp.redman -y --purge; sudo dpkg -i dist/rsp.Wifiman.0.0_amd64.deb || true",
        "test:getInterfaces": "node ./test/getInterfaces.js",
        "test:getKnownWifis": "node ./test/getKnownWifis.js"
    },

    "build": {
        "appId": "io.ropsoft.rsp.wifiman",
        "productName": "rsp.wifiman",
        "directories": {
        "output": "dist"
        },
        "linux": {
        "icon": "./icon.png",
        "target": [
            "deb"
        ],
        "category": "Settings"
        }
    },

    "dependencies": {
        "electron": "^31.0.2",
        "electron-devtools-installer": "^3.2.0",
        "electron-prompt": "^1.7.0",
        "network": "^0.7.0",
        "network-config": "^3.0.0",
        "network-manager": "^1.0.2",
        "node-wifi": "^2.0.16",
        "qrcode": "^1.5.3",
        "shelljs": "^0.8.5",
        "wireless-tools": "^0.19.0"
    },
    "devDependencies": {
        "@vue/devtools": "^6.0.0-beta.21",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-reloader": "^1.2.3"
    }
}
